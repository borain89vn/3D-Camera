<?xml version="1.0" encoding="utf-8"?><layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- "background shadow" -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#000000" />

            <corners android:radius="1dp" />
        </shape>
    </item>
    <!-- background color -->
    <item
        android:bottom="3px"
        android:left="3px"
        android:right="3px"
        android:top="3px">
        <shape android:shape="rectangle" >
            <solid android:color="#cc2b2b" />


            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- over left shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:centerColor="#DDAE68"
                android:centerX="0.9"
                android:endColor="#B98343"
                android:startColor="#B98343" />

            <corners android:radius="1dp" />
        </shape>
    </item>
    <!-- over right shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:centerColor="#DDAE68"
                android:centerX="0.9"
                android:endColor="#B98343"
                android:startColor="#B98343" />

            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- over top shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90"
                android:centerColor="#DDAE68"
                android:centerY="0.9"
                android:endColor="#DDAE68"
                android:startColor="#B98343"
                android:type="linear" />

            <corners android:radius="1dp" />
        </shape>
    </item>
    <!-- over bottom shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#DDAE68"
                android:centerY="0.9"
                android:endColor="#DDAE68"
                android:startColor="#B98343"
                android:type="linear" />

            <corners android:radius="1dp" />
        </shape>
    </item></layer-list>
